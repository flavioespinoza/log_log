{
  "compilerOptions": {
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "lib": [
      "es2016",
      "dom",
      "esnext"
    ],
    "module": "umd",
    "target": "es5",
    "outDir": "./lib/",
    "baseUrl": "/",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "declaration": true
  },
  "sourceMap": true,
  "include": [
    "_src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "_lib",
    "lib"
  ]
}